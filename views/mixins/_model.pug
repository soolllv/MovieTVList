mixin model(parsedData)

    div(id="model_movie" class="hidden")
        form(action="" method='POST')
            .mmp_one
                .model_form
                    img(src=parsedData.Poster)
                .model_form
                    p= parsedData.Title
                // there u need to remove rewatched and replace dropped's status to 2
                .model_form
                    span(class='fas fa-heart')
                .model_form
                    button(type="submit" id='save' class='button_small') Save
            .mmp_two
                .model_form
                    label(for="Status") Status
                    select(name="Status") Status
                        option(value='1') Completed
                        option(value='2') Plan to Watch 
                        option(value='3') Rewatched 
                        option(value='4') Dropped
                .model_form
                    label(for="score") Score
                    input(type="number" name="score" min='1' max='10' step='0.5') 
                .model_form
                    label(for="rewatches") Total Rewatches
                    input(type="number" name="rewatches" min='0' step='1')
                .model_form
                    label(for='start_date') Start Date
                    input(type='date' name='start_date')
                .model_form
                    label(for='end_date') End Date
                    input(type='date' name='end_date')
            .mmp_last
                    button(type="submit" class='button_small') Delete